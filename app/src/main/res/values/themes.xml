<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GlobaltipsApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="primaryIndigo">@color/primaryIndigo</item>
        <item name="textIcon">@color/textIcon</item>
        <item name="accentTeal">@color/accentTeal</item>
        <item name="primaryText">@color/primaryText</item>
        <item name="secondaryText">@color/secondaryText</item>
        <item name="darkPrimaryIndigo">@color/darkPrimaryIndigo</item>
        <item name="lightPrimaryIndigo">@color/lightPrimaryIndigo</item>
        <item name="dividerColor">@color/dividerColor</item>

    </style>

    <style name="Theme.GlobaltipsApp" parent="Base.Theme.GlobaltipsApp" />

    <style name="Theme.GlobaltipsApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GlobaltipsApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GlobaltipsApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>